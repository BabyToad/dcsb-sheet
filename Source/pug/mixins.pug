//- Faction status row
mixin faction-status(name)
    .faction-row
        input(type="text", name=`attr_${name}_faction`, placeholder="Faction name").faction-name
        .status-track
            - for (var i = -3; i <= 3; i++)
                input(type="radio", name=`attr_${name}_status`, value=i, checked=(i === 0), id=`${name}_status_${i}`)
                label.status-pip(for=`${name}_status_${i}`, data-value=i)
                    if i === -3
                        span W
                    else if i === 3
                        span A

//- Cohort block
mixin cohort-block()
    .cohort-entry
        .cohort-header
            input(type="text", name="attr_cohort_name", placeholder="Cohort name").cohort-name
            select(name="attr_cohort_type")
                option(value="gang") Gang
                option(value="expert") Expert
        .cohort-tags
            +text-input("cohort_tags", "TAGS")
        .cohort-harm
            span.harm-label(data-i18n="HARM") Harm:
            - for (var i = 1; i <= 4; i++)
                input(type="checkbox", name=`attr_cohort_harm_${i}`, value="1", id=`cohort_harm_${i}`)
                label.harm-box(for=`cohort_harm_${i}`)
        .cohort-edges-flaws
            +text-input("cohort_edges", "EDGES")
            +text-input("cohort_flaws", "FLAWS")

//- Upgrade checkbox
mixin upgrade-checkbox(name, label, cost)
    label.upgrade-checkbox
        input(type="checkbox", name=`attr_${name}`, value="1")
        span.upgrade-box
        span.upgrade-name(data-i18n=label)= label
        if cost && cost > 1
            span.upgrade-cost= `(${cost})`

