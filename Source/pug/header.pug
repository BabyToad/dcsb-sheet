//- Dark City, Shining Babel - Header and Navigation
//- Terminal/ANSI Art Header

.header
    //- ASCII art title banner
    .title-banner
        pre.ascii-art
            | ╔══════════════════════════════════════════════════════╗
            | ║  ░▒▓█                                        █▓▒░  ║
            | ║       #[span.accent D]#[span.dim A]#[span.accent R]#[span.dim K]  #[span.accent C]#[span.dim I]#[span.accent T]#[span.dim Y]#[span.comma ,]  #[span.accent S]#[span.dim H]#[span.accent I]#[span.dim N]#[span.accent I]#[span.dim N]#[span.accent G]  #[span.accent B]#[span.dim A]#[span.accent B]#[span.dim E]#[span.accent L]       ║
            | ║  ░▒▓█                                        █▓▒░  ║
            | ╠══════════════════════════════════════════════════════╣
            | ║  #[span.system-text > RUNNER_DOSSIER.SYS]                    #[span.status ■ ONLINE]  ║
            | ╚══════════════════════════════════════════════════════╝

    //- Tab navigation - labels point to root-level radio buttons
    .tab-nav
        label.tab-button(for="tab_character")
            span.tab-text(data-i18n="CHARACTER") CHARACTER
        label.tab-button(for="tab_crew")
            span.tab-text(data-i18n="CREW") CREW

    //- Roll modifier selector - adds/subtracts dice from all rolls
    .roll-modifier-row
        span.modifier-label DICE MOD
        .modifier-options
            input.fakeradio(type="radio", name="attr_roll_modifier", value="-1", id="mod_neg1")
            label.modifier-btn(for="mod_neg1") -1
            input.fakeradio(type="radio", name="attr_roll_modifier", value="0", checked, id="mod_0")
            label.modifier-btn.mod-zero(for="mod_0") 0
            input.fakeradio(type="radio", name="attr_roll_modifier", value="1", id="mod_1")
            label.modifier-btn(for="mod_1") +1
            input.fakeradio(type="radio", name="attr_roll_modifier", value="2", id="mod_2")
            label.modifier-btn(for="mod_2") +2
            input.fakeradio(type="radio", name="attr_roll_modifier", value="3", id="mod_3")
            label.modifier-btn(for="mod_3") +3
            input.fakeradio(type="radio", name="attr_roll_modifier", value="4", id="mod_4")
            label.modifier-btn(for="mod_4") +4
            input.fakeradio(type="radio", name="attr_roll_modifier", value="5", id="mod_5")
            label.modifier-btn(for="mod_5") +5

